{
	"type": "LinearLayout",
	"layout_width": "match_parent",
	"layout_height": "match_parent",
	"orientation": "vertical",
	"gravity": "top",
	"layout_gravity": "bottom",
	"background": "#55ffab05",
	"padding": 10,
	"children": [
		{
			"type": "LinearLayout",
			"layout_width": "match_parent",
			"layout_height": "wrap_content",
			"orientation": "horizontal",
			"gravity": "center|left",
			"background": "grey",
			"paddingRight": "30",
			"paddingLeft": "10",
			"paddingTop": "10",
			"paddingBottom": "10",
			"children": [
				{
					"type": "ImageView",
					"layout_width": 64,
					"layout_height": 64,
					"layout_margin": 20,
					"icon": "https://assets-cdn.github.com/images/modules/logos_page/GitHub-Mark.png"
				},
				{
					"type": "Button",
					"id": "my_button",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"text": "Naked button",
					"onClick": "What do I do here",
					"textAllCaps": false,
					"textColor": "yellow",
					"background": "@null",
					"tag": "Here's some data in a tag"
				},
				{
					"type": "Button",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"layout_marginLeft": "20",
					"text": "Or me",
					"textAllCaps": true,
					"textColor": "white",
					"alpha": 0.4
				},
				{
					"type": "EditText",
					"id": "edit_name",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"minWidth": 300,
					"inputType": "textCapWords",
					"maxLength": 80,
					"hint": "A hint"
				},
				{
					"type": "ProgressBar",
					"id": "seeker",
					"layout_width": "0",
					"layout_height": "wrap_content",
					"layout_weight": "0.6",
					"max": 100,
					"progress": 20,
					"indeterminate": false
				}
			]
		},
		{
			"type": "LinearLayout",
			"layout_width": "match_parent",
			"layout_height": "wrap_content",
			"orientation": "horizontal",
			"gravity": "center|left",
			"background": "#66aa00aa",
			"padding": "30",
			"children": [
				{
					"type": "Spinner",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"items": [
						{ "id": "item1", "text": "Item 1" },
						{ "id": "item2", "text": "Item 2" },
						{ "id": "item3", "text": "Item 3" },
						{ "id": "item4", "text": "Item 4" },
						{ "id": "item5", "text": "Item 5" }
					]
				},
				{
					"type": "CheckBox",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"text": "CHECK this out"
				},
				{
					"type": "RadioGroup",
					"layout_width": "wrap_content",
					"layout_height": "wrap_content",
					"layout_marginLeft": "20",
					"orientation": "horizontal",
					"children": [
						{
							"type": "RadioButton",
							"layout_width": "wrap_content",
							"layout_height": "wrap_content",
							"text": "Radio 1"
						},
						{
							"type": "RadioButton",
							"layout_width": "wrap_content",
							"layout_height": "wrap_content",
							"text": "Radio 2",
							"textStyle": "bold"
						}
					]
				}
			]
		},
		{
			"type": "FrameLayout",
			"layout_width": "match_parent",
			"layout_height": "wrap_content",
			"layout_marginTop": "40",
			"padding": "40",
			"background": "#ff00ff",
			"children": [
				{
					"type": "RecyclerView",
					"layout_width": "match_parent",
					"layout_height": "wrap_content",
					"background": "black",
					"minWidth": "80",
					"minHeight": "60",
					"adapter": {
						"item_style": {
							"title": {
								"textColor": "yellow",
								"textStyle": "bold",
								"textSize": "20"
							},
							"subtext": {
								"textColor": "white",
								"gravity": "right"
							}
						},
						"items": [
							{ "id": "item1", "title": "Title 1", "subtitle": "sub-title 1" },
							{ "id": "item2", "title": "Title 2", "subtitle": "sub-title 2" },
							{ "id": "item3", "title": "Title 3", "subtitle": "sub-title 3" },
							{ "id": "item4", "title": "Title 4", "subtitle": "sub-title 4" },
							{ "id": "item5", "title": "Title 5", "subtitle": "sub-title 5" },
							{ "id": "item6", "title": "Title 6", "subtitle": "sub-title 6" }
						]
					}
				}
			]
		}
	]
}
